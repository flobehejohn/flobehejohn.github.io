    <script>
      // Affichage de la 3e frame vidéo à l'ouverture pour toutes les vidéos des cartes (même UX que Rencontre)
      document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.carte-lecteur-video video').forEach(video => {
          const frameTime = 0.125; // 3e image à 24fps
          function seekToFrame() {
            if (Math.abs(video.currentTime - frameTime) > 0.01) {
              video.currentTime = frameTime;
            }
          }
          video.addEventListener('loadedmetadata', seekToFrame);
          video.addEventListener('seeked', function onceSeeked() {
            video.removeEventListener('seeked', onceSeeked);
          });
          setTimeout(() => { seekToFrame(); }, 150);
        });
      });
    </script>
