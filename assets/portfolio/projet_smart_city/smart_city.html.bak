    <!-- Frame stable + Modale PDF -->
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        // Positionne une frame stable sur les vidéos
        document.querySelectorAll('.carte-lecteur-video video').forEach(video => {
          const frameTime = 0.12;
          function seekToFrame() {
            try { if (Math.abs(video.currentTime - frameTime) > 0.01) video.currentTime = frameTime; } catch(e){}
          }
          video.addEventListener('loadedmetadata', seekToFrame, { once: true });
          setTimeout(seekToFrame, 150);
        });

        // Modale publication
        const openPub  = document.getElementById('open-publication-modal');
        const pubModal = document.getElementById('publication-modal');
        const closePub = document.getElementById('close-publication-modal');

        if (openPub && pubModal && closePub) {
          openPub.addEventListener('click', () => openModal(pubModal));
          closePub.addEventListener('click', () => closeModal(pubModal));
          pubModal.addEventListener('click', (e) => { if (e.target === pubModal) closeModal(pubModal); });
        }

        // Échappe pour fermer la modale PDF
        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && pubModal && pubModal.classList.contains('show')) {
            closeModal(pubModal);
          }
        });

        function openModal(modal){
          modal.classList.add('show');
          modal.setAttribute('aria-hidden', 'false');
          document.body.style.overflow = 'hidden';
        }
        function closeModal(modal){
          modal.classList.remove('show');
          modal.setAttribute('aria-hidden', 'true');
          document.body.style.overflow = '';
        }
      });
    </script>
