    <!-- Retire le preload + fige une frame stable à l’ouverture + overlay posters -->
    <script>
      window.addEventListener('DOMContentLoaded', function() {
        document.body.classList.remove('preload');

        // 1) Figer une frame stable (évite l'écran noir sur certaines plateformes)
        document.querySelectorAll('.carte-lecteur-video video').forEach(video => {
          const frameTime = 0.12;
          function seekToFrame() {
            try { if (Math.abs(video.currentTime - frameTime) > 0.01) video.currentTime = frameTime; } catch(e){}
          }
          video.addEventListener('loadedmetadata', seekToFrame, { once: true });
          setTimeout(seekToFrame, 150);
        });

        // 2) Overlay posters (affiché avant lecture et en pause/fin)
        function bindPoster(container){
          const video  = container.querySelector('video');
          const poster = container.querySelector('.video-poster-overlay');
          if(!video || !poster) return;

          // Par défaut : poster visible
          poster.classList.remove('is-hidden');

          // Clic sur le poster => play
          poster.addEventListener('click', () => {
            try { video.play(); } catch(e){}
          });

          // Événements vidéo
          video.addEventListener('play',   () => poster.classList.add('is-hidden'));
          video.addEventListener('pause',  () => poster.classList.remove('is-hidden'));
          video.addEventListener('ended',  () => poster.classList.remove('is-hidden'));
          video.addEventListener('loadedmetadata', () => {
            if (video.paused) poster.classList.remove('is-hidden');
          });
        }
        document.querySelectorAll('.carte-lecteur-video-media').forEach(bindPoster);
      });
    </script>
