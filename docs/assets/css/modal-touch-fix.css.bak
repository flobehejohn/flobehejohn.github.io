@media (max-width: 1024px) {
  /* Fond figé quand une modale est ouverte */
  body.modal-open {
    position: fixed;
    width: 100%;
    top: var(--scroll-lock-top, 0px);
    overflow: hidden;
  }

  /* Cible les conteneurs scrollables des modales et “faux modales” */
  .modal-content,
  #cv-modal .modal-content,
  .modal .modal-dialog .modal-content,
  

  /* Overlays en plein écran (au cas où) */
  .modal-overlay[aria-hidden="false"],
  .modal-overlay.is-open,
  .modal.show,
  #cv-modal[aria-hidden="false"] {
    position: fixed;
    inset: 0;
  }
}

/* Sécurité : évite qu’un style global supprime le scroll */
html, body { height: 100%; }

